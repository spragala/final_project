            <li><a href="/users/logout">Logout</a></li>
          {{else}}
            <li><a href="/users/login">Login</a></li>
          {{/if}}
          {{#if user.admin}}
            <li><a href="/dashboard">Dashboard</a></li>
          {{/if}}
        </ul>
      </div>
    </nav>

    <!-- Body -->
    <div class="body-section">

      <!-- Success & Errors -->
      {{#if success_msg}}
          <div class="col s4 card-panel green lighten-4 green-text text-darken-4">{{success_msg}}</div>
      {{/if}}

      {{#if error_msg}}
      <div class="col s4 card-panel red lighten-4 red-text text-darken-4">{{error_msg}}</div>
      {{/if}}

      {{#if error}}
      <div class="col s4 card-panel red lighten-4 red-text text-darken-4">{{error}}</div>
      {{/if}}

      {{{ body }}}

    </div>

    <!-- Footer -->
    <footer class="page-footer">
