<div class="buffer">
</div>
<div class="row profile-wrapper">
  <div class="left">
    <div class="appointment">
      <h5> Appointments </h5>
      {{#each appointments}}
        <p class="location"> <strong>{{location}}</strong></p>
        <p class="time">{{time}}</p>
      {{/each}}
    </div>
    <div class="map">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3997.625515326368!2d-122.26165813300491!3d37.814274846242235!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808f8753cbea5f8d%3A0x26109c4da14f4cda!2s2501+Harrison+St%2C+Oakland%2C+CA+94612!5e0!3m2!1sen!2sus!4v1501130192207" frameborder="0" allowfullscreen></iframe>
    </div>
  </div>
  <hr>
  <div class="right-side">
    <div class="personal-info-block">
      <h2 class="personal-info-head"> Personal Information</h2>
      <p class="personal-info-text"> <strong>Name:</strong> {{name}} </p>
      <p class="personal-info-text"> <strong>Username:</strong> {{username}} </p>
      <p class="personal-info-text"> <strong>Email:</strong> {{email}} </p>
      <a class="modal-trigger btn-floating btn-med waves-effect waves-light" href="#user-setting"><i class="material-icons">settings</i>Settings</a>
    </div>

    <div class="bookshelf">
      <h5> Links for {{name}} </h5>
      <ul class="link-list">
        {{#each links}}
          <li>
            <a class="link" href="{{this}}">{{this}}</a>
            <form class="delete-butn" method="post" action="users/{{../id}}/links/">
              <button class="delete-link btn-floating btn waves-effect waves-light red"><i class="material-icons">clear</i></button>
            </form>
          </li>
          <hr>
        {{/each}}
      </ul>
    </div>
  </div> <!-- right-side -->
</div> <!-- wrapper -->

<div id="user-setting" class="modal">
  <div class="update">
    <form class="col s12" method="post" action="/users/{{id}}">
      <div class="row">
        <div class="input-field col s10 offset-s1">
          <input name="name" type="text" class="validate">
          <label for="name">Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s10 offset-s1">
          <input name="username" type="text" class="validate">
          <label for="username">Username</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s10 offset-s1">
          <input name="email" type="email" class="validate">
          <label for="email">Email</label>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn waves-effect waves-light" type="submit" >Update
        </button>
      </div>
    </form>
  </div>
</div>
